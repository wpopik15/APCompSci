13.
package TestPackage; 

public class DigitSwap{ 

	public int swapsDigits(int n){
	int newTens = (n%10)*10; 
	int newOnes = (n/10)%10; 
	int rest =(n/100)*100 + newTens + newOnes; //swaps last two digits and concatenates them
	return rest;
	}
	
	public static void main(String[] args) { 
		DigitSwap result = new DigitSwap();
		System.out.println(result.swapsDigits(32));
	} 

}
14. 
package TestPackage;

public class WeekDay {

	public int findsWeekDay(int day){
		int dayOfWeek1 = 0;
		int dayOfWeek = (dayOfWeek1 + (day - 1)) % 7;
		return dayOfWeek;
	}
	
	public static void main(String args[]) { 
		WeekDay result = new WeekDay();
		System.out.println(result.findsWeekDay(27));
	} 
}
